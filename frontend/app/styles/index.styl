@import "nib"

body
  display: block;
  width 98%
  height 100%
  font-size: 100%;
  background #2d2d2d
  color #f3f3f3

button, input
  border-radius 5px
  border none
  list-style none


 .block
  min-width 100%
  max-width 100%
  display inline-block
  margin 10px 0 10px 0

/*change rate value block*/
.rateMeasure
  min-height 2em
  max-height 2em
  font-size 1em

.checkButton
  font-size 2.2em
  min-width 22%
  max-width  22%
  margin-left 2.2%
  text-align center
  width 100%
  background #4f4f4d
  color #f3f3f3

.checkButton.active
  background #019c50

/*hash rate block*/
.hashRate > div
  padding: 0.5em 0 0.5em 0;
  margin-top: 0.5em;
  min-height 3em
  max-height 3em

.hashRate  span
  font-size: 1.7em;
  max-width: 20%;
  min-width: 20%;
  float left

.hashRate > div div
  max-width: 80%;
  min-width: 80%;
  font-size 2em
  text-align center
  float left


.hashRate div.light
  background #3d3d3d


.setMinHr
  margin-top:2em;
  min-width 100%
  max-width 100%
  display inherit


.setMinHr > span
  font-size 1.5em
  min-width 100%
  max-width 100%

.setMinHr > input
  font-size 1.5em
  min-width 70%
  max-width 70%
  padding 0.5em
  margin-left: 1em





.blueButton
  padding 0.5em
  font-size 1.5em
  min-width 20%
  max-width 20%
  color #f3f3f3
  background #008eab


.optInput
  min-width 100%
  max-width 100%
  font-size 1.2em
  min-height 2em
  max-height 2em
  padding-left 1%;
  margin-top 1%

.sendOptions .blueButton
  max-width 70%
  min-width 70%
  margin-left 15%

.sendOptions
  display block
  min-width 70%
  max-width 70%
  font-size: 1.5em
  margin 5% auto

.form
  margin-top 2em;


.header
  min-width 100%
  margin-bottom: 10px;
  min-height 3em;

.header > button
  float right

.time
  max-width 31%
  min-width 31%
  float right


.sendOptions .update span, .work span
  float left
  font-size 1.5em
  padding-top 2%
  max-width 60%
  min-width  60%
  text-align right

.sendOptions button
  margin-top 10%

.work input
  min-width 100%

.true
  background #019c50
