@import "nib"

body
  display: block;
  width 98%
  height 100%
  font-size: 100%;
  background #2d2d2d
  color #f3f3f3

button, input
  border-radius 5px
  border none
  list-style none


/*change rate value block*/
.rateValue_block
  display inherit
  min-height 2em
  max-height 2em

.rateValue_block > button
  font-size 2.2em
  min-width 30%
  max-width 30%
  margin-left 2.2%
  text-align center
  width 100%
  background #4f4f4d
  color #f3f3f3

.rateValue_block > button.select
  background #019c50

/*hash rate block*/
.hashRate_block
  display: inherit;
  margin-top: 2.3em;

.hashRate_block > div
  padding: 0.5em 0 0.5em 0;
  margin-top: 0.5em;
  min-height 3em
  max-height 3em

.hashRate_block  span
  font-size: 1.7em;
  max-width: 20%;
  min-width: 20%;
  float left

.hashRate_block > div div
  max-width: 80%;
  min-width: 80%;
  font-size 2em
  text-align center
  float left


.hashRate_block div.light
  background #3d3d3d


.setMinHr_block
  margin-top:2em;
  min-width 100%
  max-width 100%
  display inherit


.setMinHr_block > span
  font-size 1.5em
  min-width 100%
  max-width 100%

.setMinHr_block > input, .sendOptions > div input
  font-size 1.5em
  min-width 70%
  max-width 70%
  padding 0.5em
  margin-left: 1em

.setMinHr_block > button, .pageButton_block > button
  padding 0.5em
  font-size 1.5em
  min-width 20%
  max-width 20%
  color #f3f3f3
  background #008eab


.sendOptions
  min-width 100%
  max-width 100%
  margin-top 2em
  display block

.sendOptions > div
  min-width 100%
  max-width 100%

.sendOptions > div span
  padding-top  0.5em
  height 100%;
  text-align center
  display block
  font-size 1.5em
  min-width 20%
  max-width 20%
  float left

.sendOptions > div input
  float left

.lock_form